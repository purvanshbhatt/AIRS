# ===========================================
# AIRS Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ===========================================
# Environment Mode
# ===========================================
# Set to "local" for development (loads .env file)
# Set to "prod" for production (uses system env vars only)
ENV=local

# Application Settings
APP_NAME=AIRS
DEBUG=true
PORT=8000

# ===========================================
# Database
# ===========================================
# For local development, SQLite is used
# For production, consider Cloud SQL or other managed databases
DATABASE_URL=sqlite:///./airs.db

# ===========================================
# CORS Configuration
# ===========================================
# Comma-separated list of allowed origins
# Use * for all origins (development only)
# Example: http://localhost:3000,https://myapp.com
CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================================
# GCP Settings (Optional for local dev)
# ===========================================
# GCP_PROJECT_ID=your-project-id

# ===========================================
# LLM Configuration (Optional)
# ===========================================
# Enable AI-assisted narrative generation
AIRS_USE_LLM=false

# Google Gemini API Key (get at: https://aistudio.google.com/apikey)
# GEMINI_API_KEY=

# LLM Model and Parameters
LLM_MODEL=gemini-2.0-flash
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.7
