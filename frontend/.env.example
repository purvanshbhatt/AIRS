# AIRS Frontend Environment Variables
# Copy to .env.local for local development

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL
# - For local development: http://localhost:8000
# - For hosted API: https://airs-api-<project-id>.run.app
VITE_API_BASE_URL=http://localhost:8000

# =============================================================================
# Firebase Configuration (Public Client Keys)
# =============================================================================
# Get these from Firebase Console > Project Settings > General > Your apps
# These are client-side keys that identify your Firebase project

VITE_FIREBASE_API_KEY=<your-firebase-api-key>
VITE_FIREBASE_AUTH_DOMAIN=<your-project-id>.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=<your-project-id>
VITE_FIREBASE_STORAGE_BUCKET=<your-project-id>.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=<your-sender-id>
VITE_FIREBASE_APP_ID=<your-app-id>

# =============================================================================
# App Settings
# =============================================================================

# App name displayed in UI
VITE_APP_NAME=AIRS

# Enable demo mode banner (set to "true" to show)
# VITE_DEMO_MODE=false
