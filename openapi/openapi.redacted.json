{
  "openapi": "3.0.3",
  "info": {
    "title": "AIRS - AI Incident Readiness Score API",
    "description": "REST API for security readiness assessments with scoring, findings, and reporting capabilities.",
    "version": "1.0.0",
    "contact": {
      "name": "AIRS Support"
    }
  },
  "servers": [
    {
      "url": "https://airs-api-<project-id>.run.app",
      "description": "Production API"
    }
  ],
  "tags": [
    {
      "name": "Organizations",
      "description": "Manage organizations for assessments"
    },
    {
      "name": "Assessments",
      "description": "Create and manage security assessments"
    },
    {
      "name": "Reports",
      "description": "Generate and retrieve PDF reports"
    },
    {
      "name": "Health",
      "description": "Service health checks"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Basic health check",
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/health/db": {
      "get": {
        "tags": ["Health"],
        "summary": "Database connectivity check",
        "operationId": "healthCheckDb",
        "responses": {
          "200": {
            "description": "Database connection is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/health/llm": {
      "get": {
        "tags": ["Health"],
        "summary": "LLM service status",
        "operationId": "healthCheckLlm",
        "responses": {
          "200": {
            "description": "LLM status information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LLMHealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/orgs": {
      "get": {
        "tags": ["Organizations"],
        "summary": "List organizations",
        "operationId": "listOrganizations",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "List of organizations",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Organization"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      },
      "post": {
        "tags": ["Organizations"],
        "summary": "Create organization",
        "operationId": "createOrganization",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OrganizationCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Organization created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Organization"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/api/orgs/{org_id}": {
      "get": {
        "tags": ["Organizations"],
        "summary": "Get organization by ID",
        "operationId": "getOrganization",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "org_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Organization details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Organization"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      },
      "delete": {
        "tags": ["Organizations"],
        "summary": "Delete organization",
        "operationId": "deleteOrganization",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "org_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Organization deleted"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      }
    },
    "/api/assessments": {
      "get": {
        "tags": ["Assessments"],
        "summary": "List assessments",
        "operationId": "listAssessments",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "org_id",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "Filter by organization"
          }
        ],
        "responses": {
          "200": {
            "description": "List of assessments",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AssessmentSummary"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Assessments"],
        "summary": "Create assessment",
        "operationId": "createAssessment",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AssessmentCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Assessment created with computed scores",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AssessmentResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/assessments/{assessment_id}": {
      "get": {
        "tags": ["Assessments"],
        "summary": "Get assessment by ID",
        "operationId": "getAssessment",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "assessment_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Assessment details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AssessmentResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Assessments"],
        "summary": "Delete assessment",
        "operationId": "deleteAssessment",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "assessment_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Assessment deleted"
          }
        }
      }
    },
    "/api/assessments/{assessment_id}/summary": {
      "get": {
        "tags": ["Assessments"],
        "summary": "Get assessment summary",
        "operationId": "getAssessmentSummary",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "assessment_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "baseline",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["smb", "enterprise", "healthcare", "financial"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Complete assessment summary with scores, findings, and narratives",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AssessmentSummaryResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/reports": {
      "get": {
        "tags": ["Reports"],
        "summary": "List saved reports",
        "operationId": "listReports",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "List of saved reports",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ReportSummary"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Reports"],
        "summary": "Generate and save report",
        "operationId": "createReport",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReportCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Report generated and saved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReportResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/reports/{report_id}": {
      "get": {
        "tags": ["Reports"],
        "summary": "Get report details",
        "operationId": "getReport",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "report_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Report details with download URL",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReportResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Reports"],
        "summary": "Delete report",
        "operationId": "deleteReport",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "report_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Report deleted"
          }
        }
      }
    },
    "/api/reports/generate": {
      "post": {
        "tags": ["Reports"],
        "summary": "Generate PDF without saving",
        "operationId": "generateReport",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReportGenerate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "PDF file",
            "content": {
              "application/pdf": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Firebase ID token"
      }
    },
    "responses": {
      "Unauthorized": {
        "description": "Authentication required",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "NotFound": {
        "description": "Resource not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    },
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "healthy"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "LLMHealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "healthy"
          },
          "llm_enabled": {
            "type": "boolean"
          },
          "model": {
            "type": "string",
            "example": "gemini-2.0-flash"
          }
        }
      },
      "Organization": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "industry": {
            "type": "string",
            "nullable": true
          },
          "size": {
            "type": "string",
            "nullable": true
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "OrganizationCreate": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "industry": {
            "type": "string",
            "nullable": true
          },
          "size": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "AssessmentCreate": {
        "type": "object",
        "required": ["org_id", "answers"],
        "properties": {
          "org_id": {
            "type": "string",
            "format": "uuid"
          },
          "answers": {
            "type": "object",
            "additionalProperties": {
              "oneOf": [
                {"type": "boolean"},
                {"type": "number"},
                {"type": "string"}
              ]
            },
            "description": "Map of question IDs to answers"
          }
        }
      },
      "AssessmentResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "org_id": {
            "type": "string",
            "format": "uuid"
          },
          "overall_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "maturity_level": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "AssessmentSummary": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "org_id": {
            "type": "string",
            "format": "uuid"
          },
          "org_name": {
            "type": "string"
          },
          "overall_score": {
            "type": "number"
          },
          "maturity_level": {
            "type": "integer"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "AssessmentSummaryResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "overall_score": {
            "type": "number"
          },
          "maturity_level": {
            "type": "integer"
          },
          "domain_scores": {
            "type": "object",
            "additionalProperties": {
              "type": "number"
            }
          },
          "findings": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Finding"
            }
          },
          "roadmap": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RoadmapItem"
            }
          },
          "llm_enabled": {
            "type": "boolean"
          },
          "llm_status": {
            "type": "string",
            "enum": ["ready", "pending", "disabled"]
          }
        }
      },
      "Finding": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "domain": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"]
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "recommendation": {
            "type": "string"
          }
        }
      },
      "RoadmapItem": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "phase": {
            "type": "string",
            "enum": ["30-day", "60-day", "90-day"]
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": ["HIGH", "MEDIUM", "LOW"]
          }
        }
      },
      "ReportCreate": {
        "type": "object",
        "required": ["assessment_id"],
        "properties": {
          "assessment_id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string"
          },
          "include_roadmap": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "ReportGenerate": {
        "type": "object",
        "required": ["assessment_id"],
        "properties": {
          "assessment_id": {
            "type": "string",
            "format": "uuid"
          },
          "baseline": {
            "type": "string",
            "enum": ["smb", "enterprise", "healthcare", "financial"]
          }
        }
      },
      "ReportSummary": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string"
          },
          "org_name": {
            "type": "string"
          },
          "overall_score": {
            "type": "number"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ReportResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string"
          },
          "download_url": {
            "type": "string",
            "format": "uri",
            "description": "Signed URL valid for 15 minutes"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string"
              },
              "message": {
                "type": "string"
              },
              "request_id": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
